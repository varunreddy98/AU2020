<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
        
<hibernate-configuration>

	<session-factory>

		<!-- JDBC Database connection settings -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/office?useSSL=false</property>
		<property name="connection.username">root</property>
		<property name="connection.password"></property>
		<property name="connection.pool_size">1</property>
		<property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
		<property name="show_sql">true</property>
		<property name="hbm2ddl.auto">update</property>
		<!--  	<mapping resource="employee.hbm.xml" /> -->
   <mapping class="com.sample.webproject.entity.Employee"/>
    <mapping class="com.sample.webproject.entity.Course"/>
     <mapping class="com.sample.webproject.entity.SpecialCourse"/>
      <mapping class="com.sample.webproject.entity.OutsideCourse"/>
      <mapping class="com.sample.webproject.entity.Office"/>
	</session-factory>


</hibernate-configuration>